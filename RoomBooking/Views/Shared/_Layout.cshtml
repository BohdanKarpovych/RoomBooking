<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Room booking</title>
    <link href="@Url.Content("~/Content/SiteMain.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/PagedList.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <link rel="stylesheet" href="/resources/demos/style.css" />
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>
<body>
    <nav>
        <ul class="menu">
            <li>@Html.ActionLink("Home page", "Index", "Home")</li>
            @if (User.Identity.IsAuthenticated)
            {
                <li>Current user: @User.Identity.Name @Html.ActionLink("Personal page", "PersonalPage", "Home",  new { UserName = User.Identity.Name }, null) @Html.ActionLink("Log out", "Logoff", "Account")</li>
            }
            else
            {
                <li>@Html.ActionLink("Log in", "Login", "Account") @Html.ActionLink("Register", "Register", "Account")</li>
            }
        </ul>
    </nav>
    @RenderBody()
</body>
</html>
